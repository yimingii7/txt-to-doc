<!DOCTYPE html>
<html lang="zh-CN">
<head>
<meta charset="UTF-8">
<title>TXT ⇄ DOCX 转换（稳定版）</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
body {
  font-family: system-ui, -apple-system;
  background: #f2f2f2;
  margin: 0;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box {
  background: #fff;
  width: 90%;
  max-width: 380px;
  padding: 24px;
  border-radius: 14px;
  box-shadow: 0 10px 30px rgba(0,0,0,.1);
  text-align: center;
}
h2 {
  margin-bottom: 20px;
}
.section {
  margin-bottom: 22px;
}
input[type="file"] {
  width: 100%;
  margin-top: 10px;
}
button {
  width: 100%;
  margin-top: 10px;
  padding: 12px;
  border: none;
  border-radius: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
}
small {
  color: #666;
}
</style>
</head>

<body>

<div class="box">
  <h2>TXT ⇄ DOCX</h2>

  <div class="section">
    <strong>TXT → DOCX</strong>
    <input type="file" id="txtInput" accept=".txt">
    <button onclick="txtToDocx()">转换为 DOCX</button>
  </div>

  <div class="section">
    <strong>DOCX → TXT</strong>
    <input type="file" id="docxInput" accept=".docx">
    <button onclick="docxToTxt()">转换为 TXT</button>
  </div>

  <small>稳定版 · 全设备可用</small>
</div>

<!-- docx -->
<script src="https://unpkg.com/docx@8.5.0/build/index.umd.js"></script>
<!-- mammoth -->
<script src="https://unpkg.com/mammoth@1.4.25/mammoth.browser.min.js"></script>

<script>
function txtToDocx() {
  const file = document.getElementById('txtInput').files[0];
  if (!file) {
    alert('请选择 TXT 文件');
    return;
  }

  const reader = new FileReader();
  reader.onload = e => {
    const lines = e.target.result.split('\n');

    const paragraphs = lines.map(line =>
      new docx.Paragraph({
        children: [new docx.TextRun(line)],
      })
    );

    const doc = new docx.Document({
      sections: [{
        properties: {},
        children: paragraphs,
      }],
    });

    docx.Packer.toBlob(doc).then(blob => {
      download(blob, file.name.replace('.txt', '.docx'));
    });
  };
  reader.readAsText(file, 'UTF-8');
}

function docxToTxt() {
  const file = document.getElementById('docxInput').files[0];
  if (!file) {
    alert('请选择 DOCX 文件');
    return;
  }

  const reader = new FileReader();
  reader.onload = e => {
    mammoth.extractRawText({ arrayBuffer: e.target.result })
      .then(result => {
        const blob = new Blob([result.value], { type: 'text/plain' });
        download(blob, file.name.replace('.docx', '.txt'));
      });
  };
  reader.readAsArrayBuffer(file);
}

function download(blob, filename) {
  const a = document.createElement('a');
  a.href = URL.createObjectURL(blob);
  a.download = filename;
  a.click();
  URL.revokeObjectURL(a.href);
}
</script>

</body>
</html>
